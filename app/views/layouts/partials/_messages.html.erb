<% if notice -%>
  <div class="alert alert-success text-center">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= notice %>
  </div>
<% end -%>
<% if alert -%>
  <div class="alert alert-error text-center">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= alert %>
  </div>
<% end -%>
