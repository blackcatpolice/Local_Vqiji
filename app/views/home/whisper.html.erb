<%= render "tweets/editor" %>
<div class="bk">
  <div class="bk_t"></div>
  <div class="bk_c">
    <div class="tab">
      <a class="qb" href="<%= home_path %>">全部</a>
      <a class="zy" href="<%= particular_home_path %>">特别关注</a>
      <a class="qq on" href="<%= whisper_home_path %>">悄悄关注</a>
    </div>
    <div data-type="TweetList">
      <% unless @feeds.empty? %>
        <%= render :collection => @tweets, :partial => '/tweets/tweet' %>
        <div class="lb text-center">
          <%= will_paginate @feeds,inner_window: 1, outer_window: 0 %>
        </div>
      <% else %>
        <div class="empty"><span>暂时没有收到微博哦～</span></div>
      <% end %>
    </div>
    <div class="clearfix"></div>
  </div>

  <div class="bk_t bk_d"></div>  
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $("[data-type=TweetList]").tweetList({ bindTweet: false, bindRepost: false });
    $("[data-type=tweet-editor]").tweetEditor();
  });
</script>
