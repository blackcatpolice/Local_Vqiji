<% provide(:title, '任务首页') %>
<div class="rw_zx">
	<div class="rw_xjt rw_lbt f18">任务中心<a href="<%= new_todo_task_path %>"></a></div>
  <div class="rw_nav">
    <a href="<%= todo_tasks_path %>"></a>
    <a href="<%= received_todo_tasks_path %>"></a>
    <a href="<%= created_todo_tasks_path %>"></a>
    <a href="<%= finished_todo_tasks_path %>"></a>
  </div>
	
	<div class="rw_xjt rw_lbt1 f18">待您确认任务</div>
	<div class="rw_zx_lb">
		<% if @confirming_tasks.any? %>
		  <%= render @will_finish_tasks %>
    <% else %>
		  <div class="empty"><span>暂时没有需要您确认的任务哦～</span></div>
		<% end %>
    <div class="clearfix"></div>
	</div>
	
	<div class="rw_xjt rw_lbt1 f18">即将到期的任务</div>
	<div class="rw_zx_lb">
		<% if @will_timeout_tasks.any? %>
		  <%= render @will_timeout_tasks %>
		<% else %>
		  <div class="empty"><span>您没有即将到期的任务哦～</span></div>
		<% end %>
    <div class="clearfix"></div>
	</div>
	
	<div class="rw_xjt rw_lbt1 f18">已超时的任务</div>
	<div class="rw_zx_lb">
		<% if  @timeout_tasks.any? %>
		  <%= render @timeout_tasks %>
		<% else %>
		  <div class="empty"><span>您没有已超时的任务哦～</span></div>
		<% end %>
    <div class="clearfix"></div>
	</div>

  <script>
	  $(function(){
		  try {
			  $(".knob").knob();
		  } catch(e) {}
	  });
  </script>
</div>
