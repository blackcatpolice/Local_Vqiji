<% provide(:title, '所有任务') %>
<div class="rw_zx">
	<%= render :partial =>"todo/top_nav"%>
</div>

<div class="bk">
  <div class="bk_t"></div>
  <div class="bk_c">
    <div class="gz_t f18"><span>任务中心</span></div>
    <div class="tab">
	    <%= link_to "新建任务",new_todo_task_path()%>
	    <%= link_to "我的任务",mine_todo_tasks_path() %>
	    <%= link_to "所有任务",todo_tasks_path(),:class=>"qb on"  %>
    </div>
    <div class="gz_tab">
      <% if @tasks.any? %>
        <%= render :collection => @tasks,:as=>"task", :partial => '/todo/tasks/item' %>
        <div class="clearfix"></div>
        <div class="lb text-center">
          <%= will_paginate @tasks,inner_window: 1, outer_window: 0 %>
        </div>
      <% else %>
        <div class="empty"><span>暂时没有任务哦～</span></div>
      <% end %>
    </div>
    <div class="clearfix"></div>
  </div>
  <div class="bk_t bk_d"></div>
</div>
