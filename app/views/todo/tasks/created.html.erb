<% provide(:title, '我分配的任务') -%>
<div class="rw_zx">
	<div class="rw_xjt rw_lbt f18">任务中心<a href="<%= new_todo_task_path %>"></a></div>
  <div class="rw_nav rw_nav2">
    <a href="<%= todo_tasks_path %>"></a>
    <a href="<%= received_todo_tasks_path %>"></a>
    <a href="<%= created_todo_tasks_path %>"></a>
    <a href="<%= finished_todo_tasks_path %>"></a>
  </div>
	<div class="rw_xjt rw_lbt1 f18">我分配的任务</div>
	
	<div class="rw_zx_lb">
	  <% if @tasks.any? %>
		  <%= render :collection => @tasks, :partial => 'task.created' %>
      <div class="clearfix"></div>
      <div class="lb text-center">
        <%= will_paginate @tasks,inner_window: 1, outer_window: 0 %>
      </div>
    <% else %>
      <div class="empty"><span>您还没有创建任务哦～</span></div>
    <% end %>
	</div>

  <script>
	  $(document).ready(function(){
		  try {
			  $(".knob").knob();
		  } catch(e) {}
	  });
  </script>
</div>


