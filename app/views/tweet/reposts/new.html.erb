<div class="modal hide wd_zf_modal" data-id="<%= @tweet.id %>" style="width: 420px;">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <div class="model_tabs">转发微博</div>
  </div>
  <div class="modal-body">
    <div class="modal_form" data-type="tweet-editor" data-preset="<%= raw repost_preset(@tweet).gsub('"', '\"') %>">
      <div class="wd_zf">
        <div class="wd_zf_nr"><%= link_to @tweet.sender.name, @tweet.sender %>：<%= truncate @tweet.text, length: 20 %></div>
        <div class="wd_zf_k">
          <div class="foo">
            <span class="remain_counter">您还可以输入<span class="remain">140</span>个字</span>
          </div>
          <textarea class="texter" placeholder="请输入转发理由"></textarea>
          <div class="toolbar" style="display: block;">
            <a href="javascript:void(0);" class="btn btn-danger bn submiter">转发</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
