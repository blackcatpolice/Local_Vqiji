(function($) {
  $('#comment_<%= @comment.id %>').after("<%= j render('knowledge/comments/reply_comments') %>");
  $('#reply_replyed_comment_btn_<%= @comment.id %>').on('click', function(){
    var content = $('#reply_replyed_content_<%= @comment.id %>').val();
    if(content.length == 0){
      alert('请您输入评论内容！');
      return false;
    }
    $.post("<%= reply_comment_knowledge_knowledge_comment_path(@comment) %>", {'content' : content});
  });



})(jQuery);
