          <%= link_to "", new_knowledge_knowledge_path %>
        </div>
      </div>
      <div class="bk_t bk_d"></div>
    </div>

    <% knowledge_options.each do |knowledge_option| %>
      <%= render('knowledge/knowledges/right_knowledge_list', :title => knowledge_option[:title], :knowledges => knowledge_option[:knowledges], :show_more_link => show_more_link) %>
    <% end %>
  </div>
  <div class="mr_row" wrl-row2>
    <% if false %>
    <div class="bk" asynch-widget aw-url="<%= asset_path 'widgets/weather.asynch.js' %>" aw-title="天气插件" wrl-strategy="prepend"></div>
