        <div class="zs_comm">
          <p>评论</p>
          <%= form_for(@knowledge.comments.new, :url => "/knowledge/knowledges/#{@knowledge.id}/comments", :remote => true) do |f| %>
            <%= f.text_area :content, :name => "content" %>
            <%= f.submit %>
          <% end %>
          <div class="clearfix"></div>
        </div>

        <div id="comments_div">
        <% @knowledge.comments.desc(:created_at).each do |comment| %>
          <% next if comment.new_record? %>
          <div class="zs_comm_list">
            <div class="tx"><img src="../assets/images/04.png" /></div>
            <div class="nr">
              <%= link_to comment.user.name, user_path(comment.user) %><br/>
              <%= comment.content %>
            </div>
            <div class="nr f12">
              <span class="left"><%= comment.created_at.strftime("%Y年%m月%d日 %H:%M") %></span>
