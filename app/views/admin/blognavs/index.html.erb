<% content_for :title do %>导航列表 <% end %>
<% content_for :menu_url do %><%= url_for admin_blognavs_path %><% end %>

<div span="8" class = "form-inline">
	 <table class="table table-bordered" >
	 <thead>
	 <tr>
		<th>标题</th>
		<th>状态</th>
		<th>位置</th>
		<th>创建时间</th>
		<th>操作</th>
		</tr>
		</thead>
		<tbody>
	<% if not @subjects.blank? %>
		<% @subjects.each do |subject|%>
		<tr>
		<td><%= link_to subject.title, blog_subject_path(subject), :title => "查看详细页", :target => "_blank" %></td>
		<td><%= subject.visible %></td>
		<td><%= subject.position %></td>
		<td><%= format_time(subject.created_at, "%Y-%m-%d %H:%M:%S") -%></td>
		<td>
	<%= link_to "删除",:controller=>"blognavs",:action=>"destroy",:id=>subject.id %>
  <%= link_to '更新', edit_admin_blognav_path(subject) %>&nbsp;
		</td>
		</tr>
	<% end %>	
	<% end %>
	</tbody>
</table>	
 <%= will_paginate @subjects %>


