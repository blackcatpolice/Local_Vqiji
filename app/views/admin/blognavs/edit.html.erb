<% content_for :title do%>更新导航<%end%>
  <% if flash[:notice] -%>
			 <div class="alert">
        <a class="close" data-dismiss="alert">&times;</a>
        <strong>提示：</strong> <%= flash[:notice] %>
      </div>
   <% end -%>
  
  <script type="text/javascript" >
  	$(document).ready(function() {
  		$(".close").click(function(){
  			$(".alert").slideToggle();
  		})
  	})
  </script>
    
