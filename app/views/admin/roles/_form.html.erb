<%= form_for(@role,:url => {:controller => "roles",:action=>@action },:html=>{:onsubmit=>"return validate(this);",:class=>"form form-inline"}) do |f| %>
<%= "<div class='alert alert-error'>#{flash.notice}</div>".html_safe if flash.notice%>
<%= f.label "角色名称" %>
<%= f.text_field :name %>
<%= f.label "角色备注" %>
<%= f.text_field :remark %>
<%= f.submit "保存角色" %>
<hr/>
<%= render 'menus'%>
<%= f.submit "保存角色" %>
<% end %>

<script type="text/javascript">
function validate(form){
var name = $("#role_name").val();
if(!name.replace(/\s/g,'')){
  alert("请输入角色名称");
  return false;
}
return true;
}
</script>
