<% content_for :title do%>管理员列表<%end%>
<table class="table" >
<thead>
	<tr>
    <th>姓名</th>
    <th>Email</th>
    <th>角色</th>
    <th>状态</th>
    <th>操作</th>
  </tr>
</thead>
  
<% @admins.each do |admin| %>
  <tr>
    <td><%= admin.real_name %></td>
    <td><%= admin.email %></td>
    <td><%= admin.role_ids %></td>
    <td><%= admin.enable ? "正常" : "禁用" %></td>
    <td>
    	<%= link_to '编辑', edit_admin_admin_path(admin) %>
    	<%= link_to '删除', :controller=>"admins",:action=>"destroy",:id=>admin.id %>
    </td>
  </tr>
<% end %>
</table>
<%= link_to '新建管理员',new_admin_admin_path %>

