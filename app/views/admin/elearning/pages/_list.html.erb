<table class="table">
<thead>
<tr>
  <th>序号.标题</th>
  <th>题目数量</th>
  <th>下一页</th>
  <th>操作</th>
</tr>
</thead>
<tbody>
<% @pages.each do |page|%>
<tr>
  <td><%= page.number %>. <%= link_to page.title,admin_elearning_training_page_path(:training_id=>page.training_id,:id=>page.id)  %></td>
  <td><%= page.tests_count %></td>
  <td><%= page.next.title if page.next %></td>
  <td>
   <div class="btn-group">
    <%= link_to "查看", admin_elearning_training_page_path(:training_id=>page.training_id,:id=>page.id),:class=>"btn" %>
    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
    <ul class="dropdown-menu">
      <li>
          <%= link_to raw("<i class='icon-edit'></i>修改") ,edit_admin_elearning_training_page_path(:training_id=>page.training_id,:id=>page.id) %>
      </li>
      <li>
         <%= link_to raw("<i class='icon-trash'></i>删除"),admin_elearning_training_page_path(:training_id=>page.training_id,:id=>page.id),confirm: 'Are you sure?',:method => :delete %>
      </li>
    </ul>
  </div>
  </td>
</tr>
<%end%>
</tbody>
</table>
<%= will_paginate @pages %>
