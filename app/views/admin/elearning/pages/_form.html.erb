<%= form_for(@page,:url => {:controller => "pages",:action=>@action},:html=>{:onsubmit=>"return validate(this);",:class=>"form-horizontal"}) do |f|  %>
<div class="control-group">
  <label class="control-label">排序值:</label>
  <div class="controls docs-input-sizes">
    <%= f.text_field :number,:placeholder=>"排序值",:class=>"numbersOnly",:required=>"required"%> 
    <!-- <span class="text-warning">只用于内容页排序，不用于显示</span> -->
  </div>
</div>
<div class="control-group">
  <label class="control-label">小标题:</label>
  <div class="controls docs-input-sizes">
    <%= f.text_field :title,:required=>"required"%>
  </div>
</div>
<div class="control-group">
<label class="control-label">内容:</label>
  <div class="controls docs-input-sizes">
    <%= f.kindeditor :context,:width => 800, :height => 280 %>
  </div>
</div>
<!-- -->
<div class="form-actions">
<%= f.submit "保存",:class=> "btn btn-primary"%>
</div>
<%end%>
<script type="text/javascript">
$(function(){
  $("form").validate();
  jQuery('.numbersOnly').keyup(function () { 
    this.value = this.value.replace(/[^0-9\.]/g,'');
  });
});
</script>