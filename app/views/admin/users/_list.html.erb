<table class="table">
  <thead>
    <tr>
      <th>姓名</th>
      <th>Email</th>
      <th>身份证</th>
      <th>工号</th>
      <th>所属部门</th>
      <th>岗位</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr class='<%= user.checked ? "" : "warning" %>' >
      <td title="<%= user.pinyin_name %>">
        <input type="checkbox" />
        <strong>
          <%= link_to user.name, admin_user_path(user), :class=>""%>
        </strong>
      </td>
      <td><%= user.email || '-' %></td>
      <td><%= user.id_number || '-' %></td>
      <td><%= user.job_no || '-' %></td>
      <% if user.department %>
        <td><%= user.department.name %>
        <i class="icon-info-sign" title="<%= user.department.full_name %>"></i>
        </td>
      <% else %>
	      <td>-</td>
      <% end %>

      <td><%= user.job || '-' %></td>
      <td><%= link_to "修改", edit_admin_user_path(user)%></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= will_paginate @users %>
