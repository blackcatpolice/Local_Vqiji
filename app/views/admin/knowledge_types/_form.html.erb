<%= form_for([:admin, @knowledge_type]) do |f|%>
<% if @knowledge_type.errors.any? %>
	<div class="alert alert-error">
		<button type="button" class="close" data-dismiss="alert">&times;</button>
		<% @knowledge_type.errors.full_messages.each do |msg| %>
			<%= msg%><br>
    	<% end %>
	</div>
<% end %>
<div class="control-group">
	<label class="control-label" for="question_type_name">类型名</label>
	<div class="controls docs-input-sizes">
		<div class="input-prepend">
			<%= f.text_field :name %>
		</div>
	</div>
</div>
<div class="control-group">
	<label class="control-label" for="question_type_priority">图片</label>
	<div class="controls docs-input-sizes">
		<div class="input-prepend">
			<%= f.text_field :image %>
		</div>
	</div>
</div>
<div class="control-group">
	<label class="control-label" for="question_type_priority">优先级</label>
	<div class="controls docs-input-sizes">
		<div class="input-prepend">
			<%= f.text_field :priority %>
		</div>
	</div>
</div>
<div class="control-group">
	<div class="controls docs-input-sizes">
		<%= f.submit "保存",:class=> "btn btn-primary"%>&nbsp;&nbsp;&nbsp;
		<a href="javascript:window.history.back();" class="btn">返回</a>
	</div>
</div>

<% end %>