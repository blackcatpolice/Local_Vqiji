<% content_for :title do%>员工列表<%end%>
<table class="table">
<thead>
<tr>
<th>姓名</th>
<th>公司</th>
<th>员工号</th>
<th>性别</th>
<th>身份证</th>
<th>用户</th>
<th>公司/部门</th>
</tr>
</thead>
<tbody>
<% @employees.each do |employee|%>
<tr>
  <td><%= employee.name %></td>
  <td><%= employee.company.name %></td>
	<td><%= employee.employee_no %></td>
	<td><%= employee.gender %></td>
	<td><%= employee.id_number %></td>
	<td><%= employee.user.nil? ? "未注册" : "#{employee.user.email}  #{employee.user.nickname}"%></td>
	<td><%= employee.company.name%> / <%= employee.department.name %></td>
</tr>
<%end%>
</tbody>
</table>
<%= will_paginate @employees %>
