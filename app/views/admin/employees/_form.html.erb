<%= form_for(@employee,:url => {:controller => "employees",:action=>@action},
  :html=>{:onsubmit=>"return validate(this);",:class=>"form-horizontal"}) do |form|  %>
<div class="control-group">
  <%= form.label :姓名 ,:class=>"control-label" %>
  <div class="controls docs-input-sizes">
    <div class="input-prepend">
    <%= form.text_field :name%>
    </div>
  </div>
</div>
<div class="control-group">
  <%= form.label :员工号 ,:class=>"control-label" %>
  <div class="controls docs-input-sizes">
    <%= form.text_field :employee_no %>
  </div>
</div>
<div class="control-group">
  <%= form.label :身份证号 ,:class=>"control-label" %>
  <div class="controls docs-input-sizes">
    <%= form.text_field :id_number %>
  </div>
</div>
<div class="control-group">
  <%= form.label :性别 ,:class=>"control-label" %>
  <div class="controls docs-input-sizes">
   <label class="radio inline"><%= form.radio_button :gender, Profile::GENDER_MALE ,{:checked=>"checked"} %>男</label>
    <label class="radio inline"><%= form.radio_button :gender, Profile::GENDER_FEMALE %>女</label>
  </div>
</div>
<div class="control-group">
  <%= form.label :所属公司 ,:class=>"control-label" %>
  <div class="controls docs-input-sizes">
    <%= form.select :company_id, options_from_collection_for_select(@companies, "id", "name")%>
  </div>
</div>
<div class="control-group">
  <%= form.label :所属部门 ,:class=>"control-label" %>
  <div class="controls docs-input-sizes">
   <select name="employee[department_id]">
    <% @companies.each do |com|%>
      <optgroup id="opt-<%= com.id %>" label='<%= "#{com.id}.#{com.name}" %>'>
      <% com.departments.each do |d|%>
        <option value="<%= d.id %>"><%= "#{d.id}.#{d.name}" %></option>
      <%end%>
      </optgroup>
    <%end%>
   </select>
  </div>
</div>

<div class="control-group">
  <%= form.label :所属工作组 ,:class=>"control-label" %>
  <div class="controls docs-input-sizes">
      <select name="group_ids[]" multiple="true">
        <% @groups.each do |g|%>
          <option value="<%= g.id %>"><%= "#{g.id}.#{g.name}"%></option>
        <%end%>
      </select>
  </div>
</div>
<div class="control-group">
  <%= form.label :管理员 ,:class=>"control-label" %>
  <div class="controls docs-input-sizes">
    <label class="radio inline"><%= form.radio_button :is_leader, 1 ,{:checked=>"checked"} %>是</label>
    <label class="radio inline"><%= form.radio_button :is_leader, 0 %>否</label>
  </div>
</div>
<div class="form-actions">
<%= form.submit "保存",:class=> "btn btn-primary"%>
<%= form.button "重置",:class=> "btn",:type=>"reset"%>
</div>
<%end%>
<style type="text/css">
.form-horizontal .control-label{text-align:left;}
</style>
