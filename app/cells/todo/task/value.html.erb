<div class="bk" id="widget_task_progress">
  <div class="bk_t mr_t5"></div>
  <div class="bk_c">
  	<div style="padding: 5px 0px 5px 5px;"></div>
  	<div id="placeholder" style="width:260px;height:200px;left:8px;"></div>
  	<% unless @last_log.blank? %>
  	<div class="f16" style="padding: 10px 0px 10px 10px;">最后更新: <span><%= l(@last_log.created_at, :format => :short) %></span></div>
  	<% end %>
  	<div class="f16" style="padding: 0px 0px 10px 10px;">开始时间: <span><%= l(@task.start_date, :format => :short) %></span></div>
  	<div class="f16" style="padding: 0px 0px 10px 10px;">截至时间: <span style="color: #dc5f5e;"><%= l(@task.end_date, :format => :short) %></span></div>
  </div>
  <div class="bk_t bk_d"></div>
  <div class="mr_t5_tip" data-type="progress-flag" style="display:none;"></div>
</div>


